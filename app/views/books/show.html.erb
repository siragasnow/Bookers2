<div class="row">
	<%= render 'users/userinfo', user: @user, book: @book %>
	<div class="col-xs-9">
		<h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, size: "40x40", format: "jpeg", fallback: "no_image.jpg" %>
                <br/>
                <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user.id == current_user.id %>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に消しますか？" %>
              </td>
            <% end %>
          </tr>
        </tbody>
    </table>
	</div>
</div>
